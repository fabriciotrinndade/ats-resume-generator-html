{
  "installCommand": "pnpm install --frozen-lockfile",
  "buildCommand": "pnpm --filter @ats-resume/core build && pnpm --filter @ats-resume/web build",
  "outputDirectory": "dist",

  "functions": {
    "api/**/*.ts": {
      "includeFiles": "packages/web/src/server/**"
    }
  },

  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/templates/(.*)", "destination": "/templates/$1" },
    { "source": "/examples/(.*)", "destination": "/examples/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
